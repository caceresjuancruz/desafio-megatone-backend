@model IEnumerable<api_productos.Models.Producto>

@{
    ViewData["Title"] = "Productos";
}

<h1>Productos</h1>

<p>
    <a class="btn btn-success" asp-action="Create">Añadir Producto</a>
</p>

<form asp-controller="Productos" asp-action="Index" method="get">
    <p>
        Buscar: 
        
        <input class="form-text" type="text" name="codigoProducto" placeholder="Codigo Producto"/>
      
        <label for="idMarca" class="control-label">ID Marca: </label>
        <input type="number" name="idMarca" />

        <label for="idFamilia" class="control-label">ID Familia: </label>
        <input type="number" name="idFamilia" />
        
        <label class="control-label">Mostrar bajas: </label>
        <input type="checkbox" name="mostrarBajas" value="true" />

        <input type="submit" value="Buscar" class="btn btn-sm btn-dark" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CodigoProducto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DescripcionProducto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PrecioCosto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PrecioVenta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaModificacion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Baja)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaBaja)
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CodigoProducto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DescripcionProducto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrecioCosto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrecioVenta)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaModificacion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Baja)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaBaja)
            </td>
           
            <td>
                <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.CodigoProducto">Editar</a> |
                <a class="btn btn-info" asp-action="Details" asp-route-id="@item.CodigoProducto">Detalles</a> |
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.CodigoProducto">Borrar</a>
            </td>
        </tr>
}
    </tbody>
</table>
